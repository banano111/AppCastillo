<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        tools:context=".ModUsers">


        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingVertical="20dp"
            android:backgroundTint="#FFFF"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:hint="Nombre"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/apellidoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingVertical="20dp"
                android:backgroundTint="#FFFF"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:hint="Apellido Paterno"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/apellidoM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingVertical="20dp"
                android:backgroundTint="#FFFF"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:hint="Apellido Materno"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/deporteF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingVertical="20dp"
                android:backgroundTint="#FFFF"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:hint="Deporte Favorito"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Usuarios"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#FFFF"
            android:textSize="30dp"/>

        <ListView
            android:id="@+id/vistaUsers"
            android:layout_width="match_parent"
            android:layout_height="397dp"
            android:layout_marginTop="20dp"
            android:divider="#FFFF"
            android:dividerHeight="2dp" />


    </LinearLayout>

</ScrollView>

